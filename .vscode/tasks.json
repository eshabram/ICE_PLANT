{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "make",
        "options": { "cwd": "${workspaceFolder}" },
        "problemMatcher": ["$gcc"]
      },
      {
        "label": "clean",
        "type": "shell",
        "command": "make clean",
        "options": { "cwd": "${workspaceFolder}" }
      },
      {
        "label": "run",
        "type": "shell",
        "command": "make run",
        "dependsOn": "build",
        "options": { "cwd": "${workspaceFolder}" }
      }
    ]
  }
  